{
  "name": "tco-calculator-monorepo",
  "version": "1.0.0",
  "description": "Immersion cooling TCO calculator with comprehensive testing suite",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "npm install && npm run build:shared",
    "build": "npm run build:shared && npm run build:backend && npm run build:frontend",
    "build:shared": "cd packages/shared && npm run build",
    "build:backend": "cd packages/backend && npm run build",
    "build:frontend": "cd packages/frontend && npm run build",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd packages/backend && npm run dev",
    "dev:frontend": "cd packages/frontend && npm run dev",
    "test": "./scripts/test-runner.sh --suite all",
    "test:unit": "./scripts/test-runner.sh --suite unit",
    "test:integration": "./scripts/test-runner.sh --suite integration",
    "test:e2e": "./scripts/test-runner.sh --suite e2e",
    "test:performance": "./scripts/test-runner.sh --suite performance",
    "test:security": "./scripts/test-runner.sh --suite security",
    "test:accessibility": "./scripts/test-runner.sh --suite accessibility",
    "test:load": "./scripts/test-runner.sh --suite load",
    "test:coverage": "npm run test:unit && npm run coverage:merge && npm run coverage:report",
    "coverage:merge": "node scripts/merge-coverage.js",
    "coverage:report": "nyc report --reporter=html --reporter=text --reporter=lcov",
    "lint": "concurrently \"npm run lint:backend\" \"npm run lint:frontend\" \"npm run lint:shared\"",
    "lint:backend": "cd packages/backend && npm run lint",
    "lint:frontend": "cd packages/frontend && npm run lint",
    "lint:shared": "cd packages/shared && npm run lint",
    "lint:fix": "concurrently \"npm run lint:backend -- --fix\" \"npm run lint:frontend -- --fix\" \"npm run lint:shared -- --fix\"",
    "type-check": "concurrently \"npm run type-check:backend\" \"npm run type-check:frontend\" \"npm run type-check:shared\"",
    "type-check:backend": "cd packages/backend && npm run type-check",
    "type-check:frontend": "cd packages/frontend && npm run type-check",
    "type-check:shared": "cd packages/shared && npm run type-check",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:test": "docker-compose -f docker-compose.test.yml up --abort-on-container-exit",
    "clean": "npm run clean:build && npm run clean:coverage && npm run clean:reports",
    "clean:build": "rm -rf packages/*/dist packages/*/build",
    "clean:coverage": "rm -rf coverage test-results",
    "clean:reports": "rm -rf reports playwright-report",
    "audit:security": "npm audit --audit-level=moderate",
    "audit:licenses": "license-checker --summary",
    "precommit": "npm run lint && npm run type-check && npm run test:unit",
    "prepare": "husky install",
    "release": "standard-version",
    "deploy:staging": "npm run build && npm run test && echo 'Deploy to staging...'",
    "deploy:production": "npm run build && npm run test && echo 'Deploy to production...'"
  },
  "devDependencies": {
    "@playwright/test": "^1.41.0",
    "@axe-core/playwright": "^4.8.3",
    "@types/node": "^20.11.20",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "husky": "^9.0.10",
    "license-checker": "^25.0.1",
    "nyc": "^15.1.0",
    "standard-version": "^9.5.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/company/tco-calculator.git"
  },
  "keywords": [
    "tco",
    "calculator",
    "immersion-cooling",
    "data-center",
    "energy-efficiency"
  ],
  "author": "Your Company",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/company/tco-calculator/issues"
  },
  "homepage": "https://github.com/company/tco-calculator#readme"
}