# Server Configuration
NODE_ENV=production
PORT=5000

# API Keys (for future features)
# EXCHANGE_RATE_API_KEY=your_api_key_here
# PDF_SERVICE_API_KEY=your_api_key_here

# Database (for future features)
# DATABASE_URL=postgresql://user:password@localhost:5432/tco_calculator

# Analytics (optional)
# GA_TRACKING_ID=UA-XXXXXXXXX-X
# SENTRY_DSN=https://xxxx@sentry.io/xxxx

# Email Service (for future features)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASS=your_password

# Security
# JWT_SECRET=your_secret_key_here
# SESSION_SECRET=your_session_secret_here

# Feature Flags
ENABLE_PDF_EXPORT=false
ENABLE_EXCEL_EXPORT=true
ENABLE_SHARE_LINKS=true
ENABLE_ANALYTICS=false

# Localization
DEFAULT_LANGUAGE=en
DEFAULT_CURRENCY=USD

# Performance
MAX_CALCULATION_YEARS=10
CACHE_TTL_SECONDS=3600